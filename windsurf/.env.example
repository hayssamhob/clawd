# Windsurf Broker Configuration
WINDSURF_BROKER_URL=ws://localhost:9000
WINDSURF_BROKER_TOKEN=              # Optional auth token
WINDSURF_ENABLED=true               # Enable/disable broker integration

# Fallback Behavior
WINDSURF_FALLBACK_TO_CLAUDE=true    # Use direct Claude if broker down

# Timeouts
WINDSURF_TASK_TIMEOUT_MS=1800000    # 30 minutes
WINDSURF_CACHE_TTL_MS=3600000       # 1 hour
WINDSURF_HEALTH_CHECK_INTERVAL_MS=30000  # 30 seconds

# Logging
LOG_LEVEL=info
