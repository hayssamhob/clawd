{
  "name": "windsurf-bridge",
  "displayName": "Windsurf Bridge - MCP Control",
  "description": "MCP server for external control of Windsurf Cascade",
  "version": "0.1.0",
  "publisher": "openclaw",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "windsurf-bridge.startMcpServer",
        "title": "Windsurf Bridge: Start MCP Server"
      },
      {
        "command": "windsurf-bridge.stopMcpServer",
        "title": "Windsurf Bridge: Stop MCP Server"
      },
      {
        "command": "windsurf-bridge.showCostEfficientModels",
        "title": "Windsurf Bridge: Show Cost-Efficient Models",
        "icon": "$(symbol-color)"
      },
      {
        "command": "windsurf-bridge.showPromoModels",
        "title": "Windsurf Bridge: Show Promotional Models",
        "icon": "$(gift)"
      },
      {
        "command": "windsurf-bridge.toggleCostDisplay",
        "title": "Windsurf Bridge: Toggle Cost Display"
      },
      {
        "command": "windsurf-bridge.showCostBreakdown",
        "title": "Windsurf Bridge: Show Cost Breakdown"
      }
    ],
    "configuration": {
      "title": "Windsurf Bridge",
      "properties": {
        "windsurf-bridge.mcpPort": {
          "type": "number",
          "default": 3100,
          "description": "Port for MCP server to listen on"
        },
        "windsurf-bridge.resultFile": {
          "type": "string",
          "default": "OPENCLAW_RESULT.md",
          "description": "File where Cascade writes results"
        },
        "windsurf-bridge.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start MCP server on extension activation"
        },
        "windsurf-bridge.showCostBadges": {
          "type": "boolean",
          "default": true,
          "description": "Show cost badge in status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "update-models": "node smart-updater.js && npm run compile",
    "setup-daily-updates": "./setup-daily-updates.sh"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "puppeteer": "^24.36.1"
  }
}
